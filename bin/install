#!/bin/sh

#bin_dir="$( cd "$( dirname "${BASH_SOURCE[0]}" )" && pwd )"

cd "$(dirname $0)/.."

for file in .[^.]*; do
  case "$file" in
    .git|.gitmodules|.gitignore)
      ;;
    *)
      echo "considering $file"
      if [ ".git" = "$file" ]; then
        echo "skipping .git"
      elif [ ".." = "$file" ]; then
        echo "skipping .."
      else
        if [ -h "$HOME/$file" ]; then
          echo "rm'ing $file"
          rm "$HOME/$file"
        elif [ -e "$HOME/$file" ]; then
          echo "$file backed up to $file.backup"
          mv "$HOME/$file" "$HOME/$file.backup"
        fi
        ln -s "$PWD/$file" "$HOME/$file"
        echo "$file installed."
      fi
      ;;
  esac
done

#$bin_dir/setup
