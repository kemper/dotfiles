# Git expands ~/ to $HOME
[init]
  #templatedir = ~/.git_template
[core]
  excludesfile = ~/.cvsignore
  editor = vim
[color]
  branch = auto
  diff = auto
  interactive = auto
  status = auto
[alias]
  st = "status"
  co = "checkout"
[push]
  default = current
[rebase]
  autosquash = true
[include]
  path = ~/.gitconfig.local
[merge]
  conflictstyle = diff3
[credential]
  helper=cache --timeout=604800 # 7 days
